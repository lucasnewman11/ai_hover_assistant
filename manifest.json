{
  "manifest_version": 3,
  "name": "AI Hover Assistant",
  "version": "1.0.0",
  "description": "AI-powered floating assistant with Claude and Perplexity integration",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "alarms",
    "contextMenus",
    "clipboardWrite"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://*.anthropic.com/*",
    "https://*.perplexity.ai/*",
    "https://*.chatgpt.com/*",
    "https://*.openai.com/*"
  ],
  "web_accessible_resources": [{
    "resources": [
      "apikey/claude.txt",
      "apikey/perplexity.txt",
      "apikey/openai.txt"
    ],
    "matches": ["<all_urls>"]
  }],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "src/background/background.js",
    "type": "module"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "css": ["src/content/content.css"],
    "js": [
      "src/services/ai-service.js",
      "src/services/memory-service.js",
      "src/services/usage-tracker.js",
      "src/services/voice-service.js",
      "src/services/context-service.js",
      "src/services/model-delegation-service.js",
      "src/content/hover-box.js",
      "src/content/content.js"
    ],
    "run_at": "document_end"
  }],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}